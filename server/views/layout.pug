  style.
    .main-sidebar {
    background-color: #575351;
    }
    [class*="sidebar-dark"] .brand-link,
    [class*="sidebar-dark"] .brand-link {
    color: #fdf1e1;
    size: 12em;
    }
    [class*="sidebar-dark"] .brand-link {
    border-bottom: 1px solid #8d8a89;
    }
    [class*="sidebar-dark"] .user-panel {
    border-bottom: 1px solid #8d8a89;
    }
    .brand-text {
    font-weight: 500 !important;
    font-size: 1.2em;
    }
    .card-primary:not(.card-outline) > .card-header {
    background-color: #003254;
    }
    .btn-primary {
    background-color: #003254;
    border-color: #003254;
    }
    .btn-primary:hover {
    color: #fff;
    background-color: #1A3B64;
    border-color: #1A3B64;
    }
    .btn-primary:active {
    color: #fff;
    background-color: #1A3B64;
    border-color: #1A3B64;
    }
