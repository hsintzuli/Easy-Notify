body.sidebar-mini(style='height: auto')
.wrapper
  // Navbar
  nav.main-header.navbar.navbar-expand.navbar-white.navbar-light
    // Left navbar links
    ul.navbar-nav
      li.nav-item
        a.nav-link(data-widget='pushmenu' href='#' role='button')
          i.fas.fa-bars
    // Right navbar links
    ul.navbar-nav.ml-auto
      li.nav-item
        a.nav-link(href='/management/signout')
          | Sign Out
          i.fas.fa-sign-out-alt.ml-1
          
      li.nav-item
        a.nav-link(data-widget='fullscreen' href='#' role='button')
          i.fas.fa-expand-arrows-alt
  // Main Sidebar Container
  aside.main-sidebar.sidebar-dark-primary.elevation-4
    // Brand Logo
    a.brand-link(href='/')
      img.brand-image.img-circle.elevation-3(src='/assets/img/easynotifyIcon.png' alt='AdminLTE Logo')
      span.brand-text.font-weight-light EASY-NOTIFY
    // Sidebar
    .sidebar
      // Sidebar user panel (optional)
      .user-panel.mt-3.pb-3.mb-3.d-flex
        .image
          img.img-circle.elevation-2(src='/assets/img/user.png' alt='User Image')
        .info
          a.d-block(href='#')=(userName||" Visitor ")
      // Sidebar Menu
      nav.mt-2
        ul.nav.nav-pills.nav-sidebar.flex-column(data-widget='treeview' role='menu' data-accordion='false')
          //
            Add icons to the links using the .nav-icon class
            with font-awesome or any other icon font library
          li.nav-item
            a.nav-link#dashboard-nav(href='/management/dashboard')
              i.nav-icon.fas.fa-tachometer-alt
              p
                | Dashboard
                span.right.badge.badge-danger New
          li.nav-item
            a.nav-link#reporting-nav(href='/management/reports')
              i.nav-icon.fas.fa-chart-area
              p Reporting
          li.nav-item#sending-li
            a.nav-link#sending-nav(href='#')
              i.nav-icon.fas.fa-paper-plane
              p
                | Sending
                i.right.fas.fa-angle-left
            ul.nav.nav-treeview
              li.nav-item 
                a.nav-link#app-nav(href='/management/apps')
                  i.far.fa-circle.nav-icon
                  p Apps
              li.nav-item
                a.nav-link#notification-nav(href='/management/sendnotification')
                  i.far.fa-circle.nav-icon
                  p Send Notification
      // /.sidebar-menu
    // /.sidebar
  block content
  // /.control-sidebar
  // Main Footer
  footer.main-footer
    // To the right
    .float-right.d-none.d-sm-inline An easy way to notify
