    }
    .custom-btn {
      background: #f0eeec;
      color: #5b5b5b;
      font-weight: bold;
      border-radius: 30px;
      padding: 10px 20px;
      line-height: normal;
      overflow: hidden;
      transition: all 0.4s ease;
    }
    .custom-btn.custom-btn-bg {
    background: #474559;
    color: #ffffff;
    }
    .custom-btn:hover {
    color: #FFBF00;
    }
    .custom-btn.custom-btn-bg:hover {
    background: #FFBF00;
    color: #ffffff !important;
    }
    .login {
    background: #ebc68b;
    color: #ffffff !important;
    padding: 0px 5px;
    margin-left: 30px;
    border-radius: 10px;
    }

    .navbar .login:hover, .navbar .login:focus:hover {
    background: #FFBF00;
    color: #ffffff !important;
    }

    .navbar-expand .navbar-nav .nav-link {
    font-size: 1.1rem;
    }
