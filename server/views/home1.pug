  style.
    .navbar-home {
      background-color: rgb(252, 250, 225, 0.4);
      border-bottom-left-radius:30px;
      border-bottom-right-radius:30px;
    }
    .navbar-home .nav-link {
    color: rgba(0,0,0,.5);
    font-weight: bold;
    }
    .navbar-home .nav-link:hover {
    color: #FFBF00;
    }
    .logo {
      max-width: 80%;
    }
